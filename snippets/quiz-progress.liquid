{% comment %}
  Quiz Progress Bar Component
  Displays visual progress indicator for quiz completion
  
  Usage:
  {% render 'quiz-progress', current: 1, total: 8 %}
{% endcomment %}

{%- liquid
  assign current = current | default: 0
  assign total = total | default: 8
  assign percentage = current | times: 100 | divided_by: total
-%}

<div class="quiz-progress" role="progressbar" aria-valuenow="{{ current }}" aria-valuemin="0" aria-valuemax="{{ total }}" aria-label="Quiz progress">
  <div class="quiz-progress__container">
    <div class="quiz-progress__bar" style="width: {{ percentage }}%;" data-progress-bar></div>
  </div>
  <div class="quiz-progress__text">
    <span class="quiz-progress__label">Step <span data-progress-current>{{ current }}</span> of <span data-progress-total>{{ total }}</span></span>
    <span class="quiz-progress__percentage" data-progress-percentage>{{ percentage }}%</span>
  </div>
</div>

